<UserControl x:Class="CncConvProg.View.Lavorazioni.Foratura.OperazioniDataTemplate.OperazioneLamaturaDataTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:ValueConverter="clr-namespace:CncConvProg.View.ValueConverter" xmlns:Controls="clr-namespace:CncConvProg.View.Controls" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ValueConverter:EnumToBoolConverter x:Key="EBConverter"/>
    </UserControl.Resources>
    <Grid>
        <Controls:ImprovedGroupBox Margin="5">
            <Controls:ImprovedGroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Counterbore Abilited"  Margin="5" FontSize="14" FontWeight="SemiBold" />
                    <CheckBox IsChecked="{Binding Path=LamaturaAbilitata}" VerticalAlignment="Center" Margin="5"/>
                </StackPanel>
            </Controls:ImprovedGroupBox.Header>
        </Controls:ImprovedGroupBox>

    </Grid>
</UserControl>
